@model Gerenciador_de_consumo_de_veiculos.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover Usuário</h1>

<h3>Tem certeza que deseja remover o usuário?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>     
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-info">Votar</a> |
        <input type="submit" value="Remover" class="btn btn-danger" /> 
       
    </form>
</div>
